@model Contact
<div class="container">
    <div class="col-10" style="margin-top:25px;margin-bottom:25px">   


<form  asp-action="SaveContact"  method="post" >
    <div class="row">
        <div class="form-group col-md-6">
            <label for="name">Your Name</label>
            <input type="text" asp-for="Name" class="form-control"  required="">
        </div>
        <div class="form-group col-md-6">
            <label for="name">Your Email</label>
            <input type="email" class="form-control" asp-for="Email" required="">
        </div>
    </div>
    <div class="form-group">
        <label for="name">Subject</label>
                <input type="text" class="form-control" asp-for="Subject" required="">
    </div>
    <div class="form-group">
        <label for="name">Message</label>
        <textarea class="form-control" asp-for="Message" rows="10" required=""></textarea>
    </div>
    
    <div><button type="submit" class="btn btn-info">Send Message</button></div>
    </form>
    </div>
</div>
